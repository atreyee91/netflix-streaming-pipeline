# ─── Netflix Streaming Pipeline – Environment Variables ──────────────────────
# Copy this file to .env and fill in your values.
# NEVER commit the .env file to version control.

# ── Azure Event Hubs ─────────────────────────────────────────────────────────
EVENTHUB_CONNECTION_STRING=Endpoint=sb://<namespace>.servicebus.windows.net/;SharedAccessKeyName=send-policy;SharedAccessKey=<key>
EVENTHUB_NAME=netflix-events

# ── Azure Cosmos DB ──────────────────────────────────────────────────────────
COSMOS_CONNECTION_STRING=AccountEndpoint=https://<account>.documents.azure.com:443/;AccountKey=<key>;
COSMOS_DATABASE=netflix-streaming
COSMOS_CONTAINER_EVENTS=processed-events
COSMOS_CONTAINER_AGGREGATIONS=aggregations

# ── Azure Data Lake Storage Gen2 ─────────────────────────────────────────────
DATALAKE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=<account>;AccountKey=<key>;EndpointSuffix=core.windows.net
DATALAKE_ACCOUNT_NAME=<account>
DATALAKE_CONTAINER=raw

# ── Azure Key Vault ──────────────────────────────────────────────────────────
KEY_VAULT_URL=https://<vault-name>.vault.azure.net/

# ── Dead Letter Queue ────────────────────────────────────────────────────────
DEAD_LETTER_EVENTHUB_CONNECTION=Endpoint=sb://<namespace>.servicebus.windows.net/;SharedAccessKeyName=send-policy;SharedAccessKey=<key>
DEAD_LETTER_EVENTHUB_NAME=netflix-events-dlq

# ── Monitoring ───────────────────────────────────────────────────────────────
APPINSIGHTS_INSTRUMENTATIONKEY=<instrumentation-key>
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=<key>;IngestionEndpoint=https://<region>.in.applicationinsights.azure.com/

# ── Data Generator Settings ──────────────────────────────────────────────────
GENERATOR_EVENTS_PER_SECOND=100
GENERATOR_NUM_USERS=10000
GENERATOR_DRY_RUN=false

# ── Power BI ────────────────────────────────────────────────────────────────
POWERBI_CLIENT_ID=<azure-ad-app-client-id>
POWERBI_CLIENT_SECRET=<azure-ad-app-client-secret>
POWERBI_TENANT_ID=<azure-ad-tenant-id>
POWERBI_WORKSPACE_ID=<power-bi-workspace-id>

# ── Azure Subscription ──────────────────────────────────────────────────────
AZURE_SUBSCRIPTION_ID=<subscription-id>
AZURE_RESOURCE_GROUP=rg-netflix-streaming
AZURE_LOCATION=eastus2
